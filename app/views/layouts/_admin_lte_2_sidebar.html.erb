<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <% if user_signed_in? %>
          <p><%= current_user.name %></p>
        <% elsif admin_signed_in? %>
          <p><%= current_admin.name %></p>
        <% end %>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- search form (Optional) -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search..."/>
        <span class="input-group-btn">
          <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </form>
    <!-- /.search form -->

  <% if user_signed_in? %>
  <% if current_user.user_type == "População" %>
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">HEADER</li>
        <!-- Optionally, you can add icons to the links -->
      <li><%= link_to consultings_path do %><i class="fa fa-circle-o"></i>Consultas<% end %></li>
    </ul><!-- /.sidebar-menu -->
  <% else %>
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">HEADER</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="active"><a href="/admi" ><i class='fa fa-link'></i> <span>Ordem de Serviço</span></a></li>
      <li><%= link_to service_orders_path do %><i class="fa fa-circle-o"></i>Ordem de Serviço<% end %></li>
    </ul><!-- /.sidebar-menu -->
    <% end %>


    <% elsif admin_signed_in? %>
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">HEADER</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="active"><a href=<%= administrative_users_path %>><i class='fa fa-link'></i> <span>Consultas</span></a></li>
      <li><a href="/service_orders"><i class='fa fa-link'></i> <span>Ordem de Serviço</span></a></li>
      <li><a href="/administrative/tecnicos"><i class='fa fa-link'></i> <span>Gerenciamento de Técnicos</span></a></li>
    </ul><!-- /.sidebar-menu -->
    <% end %>

  </section>
  <!-- /.sidebar -->
</aside>
