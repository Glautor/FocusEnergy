<h1>Gerenciamento de Técnicos</h1>
<div class="row">
<% @users.each do |u| %>
        <div class="col-md-3">

          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">
              <center><img style="width: 100px;" class="profile-user-img img-responsive img-circle" src="../../imagens_sistema/dog.jpg" alt="User profile picture"></center>

              <h3 class="profile-username text-center"><%= u.name %></h3>

              <p class="text-muted text-center"><%= u.user_type %></p>

              <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                  <% @ser = ServiceOrder.where(user_id:u.id).size %>
                  <b>Ordens de Serviço Associadas</b> <a class="pull-right"><%= @ser %></a>
                </li>
                <%# i = 0 %>
                <%# @total = ServiceOrder.where(user_id:u.id).each do |s| %>
                  <%# if Notification.where(services_order:s.id).description != nil %>
                  <%# i = i + 1 %>
                  <%# end %>
                <%#end %>
                <li class="list-group-item">
                  <b>Pedidos Atendidos</b> <a class="pull-right"><%= @ser %></a>
                </li>
                <li class="list-group-item">
                  <b>Pedidos Pendentes</b> <a class="pull-right"><%= @ser - @ser %></a>
                </li>
              </ul>

              <!-- <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a> -->
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
  <% end %>
</div>

